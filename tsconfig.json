{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "@src/*": ["./src/*"],
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./test/**/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "lib",
    "dist"
  ]
}
